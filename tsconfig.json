{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "es2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Additional Checks */
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
      /* ts-node によるスクリプト実行時には module: CommonJS の指定が必要。 */
    }
  }
}
